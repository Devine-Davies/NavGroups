{
    "compilerOptions": {
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "types": ["reflect-metadata"],
        "target": "es5",
        "lib": ["es6", "dom"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration" : true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules/*",
        "playground/*"
    ]
}